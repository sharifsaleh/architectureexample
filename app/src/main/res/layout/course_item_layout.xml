<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="25dp"
    app:cardBackgroundColor="@color/purple_200"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/course_item_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/course_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background"
            android:contentDescription="TODO" />


        <ImageView
            android:id="@+id/course_lock"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/course_image"
            app:layout_constraintEnd_toEndOf="@+id/course_image"
            app:layout_constraintStart_toStartOf="@+id/course_image"
            app:layout_constraintTop_toTopOf="@+id/course_image"
            app:srcCompat="@drawable/abc_vector_test"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/course_level"
            android:textSize="15sp"
            android:fontFamily="@font/roboto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="hello"
            app:layout_constraintStart_toEndOf="@+id/course_image"
            app:layout_constraintTop_toTopOf="@+id/course_image" />

        <TextView
            android:id="@+id/course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="hello"
            app:layout_constraintStart_toStartOf="@+id/course_level"
            app:layout_constraintTop_toBottomOf="@+id/course_level" />

        <TextView
            android:id="@+id/course_price"
            style="@style/CardView.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello"
            android:textSize="15sp"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="@+id/course_title"
            app:layout_constraintTop_toBottomOf="@+id/course_title" />

        <ImageButton
            android:id="@+id/course_button_buy"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/course_image"
            app:layout_constraintStart_toEndOf="@+id/course_image"
            app:layout_constraintTop_toBottomOf="@+id/course_price"
            app:srcCompat="@drawable/ic_launcher_foreground"
            android:contentDescription="TODO" />

        <ImageButton
            android:id="@+id/course_item_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/abc_vector_test"
            android:contentDescription="TODO" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

